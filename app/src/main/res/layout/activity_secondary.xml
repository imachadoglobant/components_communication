<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ActivitySecondary">

  <TextView
    android:id="@+id/text_secondary_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="32dp"
    app:layout_constraintBottom_toTopOf="@id/frame_secondary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="TextView" />

  <FrameLayout
    android:id="@+id/frame_secondary"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text_secondary_value" />

</androidx.constraintlayout.widget.ConstraintLayout>